<%- include('./header.ejs') %>
<div class="container">
    <% if(update == 1){ %><h1>UPDATE MODE</h1><%} else{ %> <h1>ADD MODE</h1> <%}%>
    <form <% if(update == 1){%> action="/updateAllStock" <%} else {%> action="/newStock"<%}%> method="POST">
        <div class="mb-3">
            <label for="InputSname" class="form-label">Stock Name</label>
            <input <%if(update==1){%>value="<%=dataU.name%>"<%}%> type="text" name="sName" class="form-control" id="InputSname" >
        </div>
        <label for="sType">select Type</label>
        <select name="sType" class="form-control" id="sType">
            <% for(var i = 0; i <data.length; i++){%>
            <option value="<%=data[i].id%>" <%if(update ==1){%> <%if(dataU.type == data[i].id){%>selected<%}}%>><%= data[i].name%></option>
            <%}%>
        </select>
        <div class="mb-3">
            <label for="InputSquantity" class="form-label">Stock Quantity</label>
            <input <%if(update==1){%>value="<%=dataU.quantity%>"<%}%>type="text" name="sQuantity" class="form-control" id="InputSquantity" >
        </div>
        <div class="mb-3">
            <label for="InputSimg" class="form-label">Stock Img</label>
            <input <%if(update==1){%>value="<%=dataU.img%>"<%}%> type="text" name="sImg" class="form-control" id="InputSimg" >
        </div>  
        <%if (update == 1){%>
            <div hidden class="mb-3">
                <label for="InputDid" class="form-label">id</label>
                <input value ="<%= dataU.id %>" type="text" name="id" class="form-control" id="InputDUid" >
            </div>
            <%}%>
          <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include('./footer.ejs') %>