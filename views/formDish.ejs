<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>HOME</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body>
    <% if(update == 1){ %><h1>UPDATE MODE</h1><%} else{ %> <h1>ADD MODE</h1> <%}%>
    <form <% if(update == 1){%> action="/updateDish" <%} else {%> action="/newDish"<%}%> method="POST">
        <div class="mb-3">
            <label for="InputDname" class="form-label">Dish name</label>
            <input <%if(update==1){%>value="<%=dataU.name%>"<%}%>type="text" name="dName" class="form-control" id="InputDname" >
        </div>
        <div class="mb-3">
            <label for="InputDtype" class="form-label">Dish type</label>
            <select name="dType" class="form-control" id="dType">
                <% for(var i = 0; i <dataT.length; i++){%>
                 <option value="<%=dataT[i].id%>" <%if(update ==1){%> <%if(dataU.type == data[i].id){%>selected<%}}%>><%= dataT[i].name%></option>
                 <%}%>
            </select>
        </div>
        <label for="mId">select Menu</label>
        <select name="mId" class="form-control" id="mId">
            <% for(var i = 0; i <data.length; i++){%>
            <option value="<%=data[i].id%>" <%if(update ==1){%> <%if(dataU.id_menus == data[i].id){%>selected<%}}%>><%= data[i].name%></option>
            <%}%>
        </select>
        <div hidden class="mb-3">
            <label for="InputDUid" class="form-label">chef</label>
            <input value ="<%= chef_id %>" type="text" name="uId" class="form-control" id="InputDUid" >
        </div>
        <%if (update == 1){%>
        <div hidden class="mb-3">
            <label for="InputDid" class="form-label">id</label>
            <input value ="<%= dataU.id %>" type="text" name="id" class="form-control" id="InputDUid" >
        </div>
        <%}%>
          <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>